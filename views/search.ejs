                    <!-- <input type="text" name="seatNumber" id="Seat Number" placeholder="Enter Your Seat Number"> -->
                    <%}else{%>
                        <div id="contents">
                    <h1>Selection Criteria:</h1>


                    <select name="university" required>
                        <option value="-1" selected>Select University</option>
                        <option value="GTU">GTU</option>
                        <option value="PARUL UNIVERSITY">PARUL UNIVERSITY</option>
                        <option value="GUJARAT UNIVERSITY">GUJARAT UNIVERSITY</option>
                        <option value="AHMEDABAD UNIVERSITY">AHMEDABAD UNIVERSITY</option>
                        <option value="NIRMA UNIVERSITY">NIRMA UNIVERSITY</option>
                        <option value="INDUS UNIVERSITY">INDUS UNIVERSITY</option>
                        <option value="OTHER">OTHER</option>
                    </select>



                    <select name="branch" required>
                        <option value="-1" selected>Branch/Stream</option>
                        <option value="Diploma Engineering">Diploma Engineering</option>
                        <option value="BE">BE</option>
                        <option value="ME">ME</option>
                        <option value="MBA">MBA</option>
                        <option value="BCOM">BCOM</option>
                        <option value="BA">BA</option>
                        <option value="OTHER">OTHER</option>
                    </select>
                    <input type=number name="year" id="Passing Year" placeholder="Passing Year">
                    <input type="text" name="aadharNumber" placeholder="Aadhar Number" value="">
                    <!-- <input type="date" name="Date Of Birth" id="Date Of Birth(dd/mm/yy)"><br><br> -->

                    <input type="text" name="seatNumber" id="Seat Number" placeholder="Enter Your Seat Number">
                    
                    <%}%>
                    <button class="find" type="submit">Find</button>
                    <br>
        </form>
        <hr>
