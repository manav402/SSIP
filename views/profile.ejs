<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home-Field</title>
    <link rel="" href="" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />
        <link href="/css/navbar.css" rel="stylesheet">
    <style>
       body{
        background-color: #4a6585;
       }
       /* .row{
        width: 100%;
       } */
       p{
        display: flex;
        width: 100%;
       }
       @media(max-width: 1000px){
            input{
                width: 200px;
            }
            text{
                width: 200px;
            }
       }
       @media(max-width:800px){
            .row{
                display:block;
                width: auto;
            }
            input{
                width: 150px;
            }
            .text{
                width: 200px;
            }
        }
       @media(max-width: 400px){
        input{
                width: 100px;
            }
            text{
                width: 200px;
            }
       }
    </style>
</head>

<body>
    <div class="profile-field">
        <div class="container">
            <nav class="navbar navbar-dark fixed-top">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" onclick="fun()" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="offcanvas offcanvas-start" id="offcanvasDarkNavbar"
                        aria-labelledby="offcanvasDarkNavbarLabel" data-bs-scroll="true" data-bs-backdrop="false">
                        <div class="offcanvas-body fixed-start">
                            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                                <li class="nav-item">
                                    <span class="rounded-6"><a class="nav-link" aria-current="page" href="/">
                                            <img src="../images/home.png" />HOME</a>
                                    </span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/search"><img src="../images/search.png" />Search</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link active bg-black" href="/profile"><img src="../images/profileactive.png" />My
                                        Profile</a>
                                </li>
                                <br />
                                <hr />
                                <li class="nav-item">
                                    <a class="nav-link" href="/login"><img src="../images/logout.png" />LogOut</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
            <section>
                <form action="/profile?_method=PATCH" method="post">
                    <div class="row-auto">
                        <div class="container mt-0 px-5 w-75">
                            <div class="row-auto">
                                <div class="col-auto">
                                    <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
                                        <ol class="breadcrumb mb-0">
                                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">My Profile</li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>

                            <div class="row justify-content-center">
                                <div class="col-sm-9 w-70">
                                    <div class="card mb-4">
                                        <div class="card-body text-center">
                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                                                alt="avatar" class="rounded-circle img-fluid" style="width: 200px;">
                                            <h5 class="my-3 text-muted"><%= user.name %></h5>
                                        </div>
                                    </div>
                                </div>

                                <div class="row justify-content-center">
                                    <div class="col-sm-9 w-70">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-sm-3 mx-5">
                                                        <p class="mb-0 text-dark"></p>
                                                    </div>
                                                    <div class="col-sm-9 mx-5">
                                                        <p class="text-muted mb-0"></p>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <p class="mb-0 text-dark">Full Name</p>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <p class="text-muted mb-0"><input type="text" name="name"
                                                                value="<%= user.name %>"></p>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <p class="mb-0 text-dark">Email</p>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <p class="text-muted mb-0"><input type="gmail" name="email"
                                                                value="<%= user.email %>"></p>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <p class="mb-0 text-dark">Mobile</p>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <p class="text-muted mb-0"><input type="number" name="mobile"
                                                                value="<%= user.mobile %>"></p>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <p class="mb-0 text-dark">DOB</p>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <p class="text-muted mb-0"><input type="text" id="date" name="DOB"
                                                                value="<%= user.DOB %>"></p>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <p class="mb-0 text-dark">Gender</p>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <p class="text-muted mb-0"><input type="text" name="gender" value="<%= user.gender %>"></p>
                                                    </div>
                                                </div>
                                                <hr>
                                                <div class="row">
                                                    <div class="col-sm-3">
                                                        <p class="mb-0 text-dark">Aadhar</p>
                                                    </div>
                                                    <div class="col-sm-9">
                                                        <p class="text-muted mb-0"><%= user.aadhar %></p>
                                                    </div>
                                                </div>
                                                <hr>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="text-center">
                        <input class="btn btn-dark btn-lg btn-block w-50"
                            type="submit">
                    </div>
                    <br>
                </form>
                </section>
                <script>
          let date=document.querySelector("#date").value=new Date();
          var toggle = 1;
          function fun() {
            if (toggle == 1) {
              document.getElementById("contents").style.marginLeft = "25%";
              toggle = 0;
            } else {
              document.getElementById("contents").style.marginLeft = "0%";
              toggle = 1;
            }
          }
                </script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
                    crossorigin="anonymous"></script>
</body>

</html>